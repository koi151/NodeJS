extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row 
      .col-12
        +box-head('Chat')

    .row
      .col-12
        .chat 
          .inner-body 
            each chat in chats
              div(class=(chat.userInfo.id == user.id ? 'inner-outgoing' : 'inner-incoming'))
                if(chat.userInfo.id != user.id)
                  .inner-name #{chat.userInfo.fullName} 
                .inner-content 
                  | #{chat.content}
