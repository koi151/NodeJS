
extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  h1(class="mb-4") Group roles

  +alert-success(5000)
  +alert-error(5000)

  .card.mb-3
    .card-header List
    .card-body
      .row
        .col-8
        .col-4.text-right
          a(
            href=`/${adminPrefix}/roles/create`
            class="btn btn-outline-success"
          ) + Add new

      table(
        class="table table-hover table-sm"
      )
        thead
          tr
            th Index
            th Group roles
            th Short description
            th Action

        tbody
          if(roles.length > 0)
            each role, index in roles
              tr
                td #{index + 1}
                td #{role.title}
                td #{role.description}
                td
                  a(
                    class="btn btn-secondary btn-sm"
                    href=`/${adminPrefix}/roles/detail/${role.id}`
                  ) Detail
                  a(
                    class="btn btn-warning btn-sm ml-1"
                    href=`/${adminPrefix}/roles/edit/${role.id}`
                  ) Edit
                  button(
                    class="btn btn-danger btn-sm ml-1"
                  ) Delete
          else
            tr
              td(colspan="4" class="text-center") No group roles have been created.